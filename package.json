{
  "name": "markdown-helper",
  "description": "ðŸ“– utilities for handle markdown files in nodejs based projects.",
  "version": "0.0.0",
  "keywords": [
    "markdown",
    "documentation",
    "typescript"
  ],
  "license": "MIT",
  "author": {
    "name": "Lucas Vieira",
    "email": "lucasvtiradentes@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasvtiradentes/markdown-helper.git"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prepare": "husky",
    "start": "node ./dist/index.js",
    "dev": "tsx ./src/index.ts",
    "build": "rimraf ./dist && tsup src/index.ts --format cjs,esm --dts",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --passWithNoTests --coverage",
    "package_check": "npm publish --dry-run",
    "changeset": "changeset",
    "release": "npm run build && changeset publish",
    "commit": "cz",
    "lint_staged": "lint-staged --concurrent false --quiet",
    "example_1": "tsx ./examples/articles/index.ts",
    "example:2": "tsx ./examples/android/index.ts"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@changesets/cli": "2.27.1",
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "commitizen": "^4.3.0",
    "commitizen-emoji": "^1.0.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
