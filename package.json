{
  "name": "dyn-markdown",
  "description": "ðŸ“– easily handle markdown files in nodejs based projects, including add, update and delete fields dynamically.",
  "version": "1.4.0",
  "keywords": [
    "markdown",
    "documentation",
    "typescript"
  ],
  "license": "MIT",
  "author": {
    "name": "Lucas Vieira",
    "email": "lucasvtiradentes@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasvtiradentes/dyn-markdown.git"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "start": "node ./dist/index.js",
    "dev": "tsx ./src/index.ts",
    "build": "rimraf ./dist && tsup src/index.ts --format cjs,esm --dts",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --passWithNoTests --coverage",
    "pub": "semantic-release",
    "pub:check": "npm publish --dry-run",
    "commit": "cz",
    "lint:staged": "lint-staged --concurrent false --quiet",
    "example:js_cjs": "node ./examples/articles/1_javascript_cjs.js",
    "example:js_esm": "node ./examples/articles/2_javascript_esm.mjs",
    "example:ts": "tsx ./examples/articles/3_typescript.ts",
    "example:ts2": "tsx ./examples/android/index.ts"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/figlet": "^1.5.8",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "commitizen": "^4.3.0",
    "commitizen-emoji": "^1.0.5",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.1",
    "rimraf": "^5.0.5",
    "semantic-release": "^23.0.0",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
