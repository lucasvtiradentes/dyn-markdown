{
  "name": "dyn-markdown",
  "description": "ðŸ“– easily handle markdown files in nodejs based projects, including add, update and delete fields dynamically.",
  "version": "1.3.1",
  "keywords": [
    "markdown",
    "documentation",
    "typescript"
  ],
  "license": "MIT",
  "author": {
    "name": "Lucas Vieira",
    "email": "lucasvtiradentes@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasvtiradentes/dyn-markdown.git"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "start": "node ./dist/src/index.js",
    "dev": "tsx ./src/index.ts",
    "build": "rimraf ./dist && tsup src/index.ts --format cjs,esm --dts",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --passWithNoTests --coverage",
    "pub": "semantic-release",
    "pub:check": "npm publish --dry-run",
    "prepare": "husky install",
    "commit": "cz",
    "lint:staged": "lint-staged --concurrent false --quiet",
    "example:js_cjs": "node ./examples/1_javascript_cjs.js",
    "example:js_esm": "node ./examples/2_javascript_esm.mjs",
    "example:ts": "tsx ./examples/3_typescript.ts"
  },
  "dependencies": {
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.5",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "commitizen": "^4.3.0",
    "commitizen-emoji": "^1.0.5",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "semantic-release": "^19.0.5",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",
    "eslint": "^8.31.0",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.5",
    "husky": "^8.0.3",
    "rimraf": "^4.0.4",
    "tsup": "^6.5.0",
    "tsx": "^3.12.6",
    "typescript": "^4.9.4"
  }
}
