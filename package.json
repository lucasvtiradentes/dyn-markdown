{
  "name": "dyn-markdown",
  "version": "1.1.0",
  "description": "ðŸ“– easily handle markdown files in nodejs based projects, including add, update and delete fields dynamically.",
  "license": "MIT",
  "keywords": [
    "markdown",
    "documentation",
    "typescript"
  ],
  "author": {
    "name": "Lucas Vieira",
    "email": "lucasvtiradentes@gmail.com"
  },
  "homepage": "https://github.com/lucasvtiradentes/dyn-markdown",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasvtiradentes/dyn-markdown.git"
  },
  "bugs": {
    "url": "https://github.com/lucasvtiradentes/dyn-markdown/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "commit": "cz",
    "prebuild": "rimraf ./dist",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "build:check": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:example": "ts-node ./examples/articles.ts",
    "test:watch": "jest --passWithNoTests --watchAll",
    "test:staged": "jest --passWithNoTests --findRelatedTests",
    "test:coverage": "jest --passWithNoTests --coverage",
    "pub": "semantic-release",
    "pub:check": "npm publish --dry-run",
    "pub:build": "npm pack && tar -xvzf *.tgz",
    "start": "node ./dist/src/index.js",
    "dev": "ts-node ./src/index.ts",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "lint-staged --concurrent false --quiet",
    "script:gitmoji": "ts-node ./scripts/gitmoji-util.ts",
    "script:issues": "ts-node ./scripts/github-issues-util.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/figlet": "^1.5.5",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "commitizen": "^4.2.6",
    "commitizen-emoji": "^1.0.5",
    "commitlint": "^17.4.1",
    "commitlint-config-gitmoji": "^2.2.9",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",
    "rimraf": "^4.0.4",
    "semantic-release": "^19.0.5",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4"
  }
}
